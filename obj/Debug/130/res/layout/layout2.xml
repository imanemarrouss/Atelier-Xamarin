<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="16dp" xmlns:android="http://schemas.android.com/apk/res/android"><EditText android:id="@+id/todoEditText" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Add a new task" /><RadioGroup android:id="@+id/priorityRadioGroup" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal"><RadioButton android:id="@+id/highPriorityRadioButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="High" /><RadioButton android:id="@+id/mediumPriorityRadioButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Medium" /><RadioButton android:id="@+id/lowPriorityRadioButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Low" /></RadioGroup><Button android:id="@+id/addButton" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Add Task" /><!-- To-Do List --><TextView android:id="@+id/todoTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="To-Do" android:textStyle="bold" android:textSize="18sp" android:layout_marginTop="16dp" /><ListView android:id="@+id/todoListView" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@android:color/transparent" /><!-- Done List --><TextView android:id="@+id/doneTitle" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Done" android:textStyle="bold" android:textSize="18sp" android:layout_marginTop="16dp" /><ListView android:id="@+id/doneListView" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@android:color/darker_gray" /></LinearLayout>